{
	"extends": "@aura/typescript-config/tsconfig.frontend.json",
	"compilerOptions": {
		"baseUrl": ".",
		"moduleResolution": "bundler",
		"rootDirs": [
			".",
			"../@aura/rest-api-client/srcrc",
			"../@aura/composables/srcrc",
			"../@aura/chat/srcrc",
			"../@aura/design-system/srcrc"
		],
		"outDir": "dist",
		"types": [
			"vitest/globals",
			"unplugin-icons/types/vue",
			"../@aura/design-system/src/shims-modules.d.ts"
		],
		"paths": {
			"@/*": ["./src/*"],
			"@aura/rest-api-client*": ../@aura/rest-api-client/src*src*"],
			"@aura/composables*": ../@aura/composables/src*src*"],
			"@aura/constants*": ["../../aurara/constants/src*"],
			"@aura/chat*": ../@aura/chat/src*src*"],
			"@aura/design-system*": ../@aura/design-system/src*src*"],
			"@aura/i18n*": ../@aura/i18n/src*src*"],
			"@aura/stores*": ../@aura/stores/src*src*"],
			"@aura/api-types*": ["../../aurara/api-types/src*"],
			"@aura/utils*": ["../../aurara/utils/src*"]
		},
		// TODO: remove all options below this line
		"useUnknownInCatchVariables": false
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
	"exclude": ["src/plugins/codemirror/typescript/worker/**/*.d.ts"]
}
