{
  "name": "aura",
  "version": "1.105.0",
  "description": "AURA Workflow Automation Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "dev": "concurrently -k -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch\" \"nodemon --delay 1\"",
    "dev:worker": "concurrently -k -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch\" \"nodemon worker\"",
    "dev:webhook": "concurrently -k -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch\" \"nodemon webhook\"",
    "format": "biome format --write .",
    "format:check": "biome ci .",
    "lint": "eslint . --quiet",
    "lint:fix": "eslint . --fix",
    "start": "node dist/index.js",
    "test": "pnpm test:sqlite",
    "test:dev": "AURA_LOG_LEVEL=silent DB_TYPE=sqlite jest --watch",
    "test:sqlite": "AURA_LOG_LEVEL=silent DB_TYPE=sqlite jest",
    "test:postgres": "AURA_LOG_LEVEL=silent DB_TYPE=postgresdb DB_POSTGRESDB_SCHEMA=alt_schema DB_TABLE_PREFIX=test_ jest --no-coverage",
    "test:mariadb": "AURA_LOG_LEVEL=silent DB_TYPE=mariadb DB_TABLE_PREFIX=test_ jest --no-coverage",
    "test:mysql": "AURA_LOG_LEVEL=silent DB_TYPE=mysqldb DB_TABLE_PREFIX=test_ jest --no-coverage",
    "watch": "tsc-watch -p tsconfig.build.json --onCompilationComplete \"tsc-alias -p tsconfig.build.json\""
  },
  "bin": {
    "aura": "./bin/aura"
  },
  "keywords": [
    "automate",
    "automation",
    "IaaS",
    "iPaaS",
    "aura",
    "workflow"
  ],
  "engines": {
    "node": ">=20.19 <= 24.x"
  },
  "files": [
    "bin",
    "dist"
  ],
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/uuid": "^9.0.7",
    "@types/xml2js": "^0.4.14",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "2.4.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "compression": "1.8.1",
    "cors": "^2.8.5",
    "dotenv": "8.6.0",
    "express": "5.1.0",
    "helmet": "8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.1",
    "uuid": "^9.0.1",
    "winston": "3.14.2",
    "zod": "^3.22.4"
  }
}
